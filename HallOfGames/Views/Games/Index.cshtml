@model IEnumerable<Game>

@{
    ViewData["Title"] = "All Games";
}

<a class="btn btn-secondary btn-lg" asp-action="Create" asp-controller="Games">
    <i class="bi bi-plus-circle-dotted" style="margin-right: 5px;"></i>
    Add New Game
</a>


@if (!Model.Any())
{
    <div class="alert alert-dismissible alert-warning">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <h4 class="alert-heading">No Games has been found in Database</h4>
        <p class="mb-0">When there are games, it will be listed here.</p>
    </div>
}
else
{
    <div class="mt-3">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Game</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var game in Model)
                {
                    <tr class="border-2 border-secondary">
                        <td>
                            <div class="d-flex">
                                <div class=" pe-4">
                                    <img src="@Url.Content($"~{ViewData["GameCoverImagesPath"]}/{game.Cover}")" alt="game-image" style="max-width: 70px;" />
                                </div>

                                <div class="d-flex flex-column justify-content-center">
                                    <h3 class="text-light">@game.Name</h3>
                                    <h6 class="text-light">@game.Category.Name</h6>
                                </div>
                            </div>
                        </td>

                        <td class="align-middle">
                            <div class="d-flex justify-content-center">
                                <a asp-area="" asp-controller="Games" asp-action="Edit" asp-route-gameId="@game.Id" class="btn btn-info rounded rounded-4 me-5"><i class="bi bi-pencil-square me-2"></i> Edit</a>
                                <a class="btn btn-danger rounded rounded-4 deleteButton" data-target-game-id="@game.Id"><i class="bi bi-trash3-fill me-1"></i> Delete</a>
                            </div>
                        </td>
                    </tr>
                }
                
            </tbody>
        </table>
    </div>
}


@section Scripts{
    <script src="~/js/ajaxcalltodeletegame.js" asp-append-version="true"></script>
}


