@model EditGameViewModel

@{
    ViewData["Title"] = "Edit Game";
}

<h3>
    <i class="bi bi-pencil-square" style="margin-right: 10px;"></i>
    Edit Game
</h3>


<form asp-action="Edit" asp-controller="Games" asp-route-gameId="@Model.gameId" method="post" enctype="multipart/form-data">

    <div class="row">

        <div class="col-md-6">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div>
                <label asp-for="Name" class="form-label mt-5"></label>
                <input asp-for="Name" class="form-control" placeholder="Game Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="CategoryId" class="form-label mt-5"></label>
                <select asp-for="CategoryId" asp-items="@Model.Categories" class="form-select">
                    <option></option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="CompatabileDevicesIds" class="form-label mt-5"></label>
                <select asp-for="CompatabileDevicesIds" asp-items="@Model.Devices" class="form-select">
                </select>
                <span asp-validation-for="CompatabileDevicesIds" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Description" class="form-label mt-5"></label>
                <textarea asp-for="Description" class="form-control" placeholder="Enter a description about the game"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Cover" class="form-label mt-5"></label>
                <input asp-for="Cover" class="form-control"
                       data-rule-extension="@(string.Join(",", (ViewData["allowedExtensions"] as string[] ?? Array.Empty<string>()).Select(s => s.Replace(".", "")).ToArray()))"
                       data-msg-extension="Not allowed extension"
                       data-rule-fileSizeValidator="@(Convert.ToInt32(ViewData["MaxSize"]) * 1024 * 1024)"
                       data-msg-fileSizeValidator="Size of uploaded file exceeds the maximum allowed size which is up to @(ViewData["MaxSize"])MB">

                <small class="form-text text-muted">Only @(string.Join(", ", (string[])(ViewData["allowedExtensions"] as string[] ?? Array.Empty<string>()))) files are allowed, with max size @(ViewData["MaxSize"])MB.</small>
                <span asp-validation-for="Cover" class="text-danger d-block"></span>
            </div>

            <button type="submit" class="btn btn-light text-black mt-5">Save</button>
        </div>

        <div class="col-md-6 d-flex justify-content-center overflow-hidden">
            <img src="@Url.Content(Model.UploadedCoverImageFullPath)" id="uploaded-image" />
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial">

    <script src="~/js/filesizevalidation.js" asp-append-version="true"></script>
    <script src="~/js/gamecoverimagepreview.js" asp-append-version="true"></script>

    <script src="~/lib/select2/js/select2.min.js"></script>
}


@section Styles{
        <link rel="stylesheet" href="~/lib/select2/css/select2.min.css" />
}
